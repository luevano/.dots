# rsync -rtuvP --delete-after $HOME/dox/www/luevano.xyz/gb/ lzr:/var/www/gb/

# echo "rsync: pulling (U) webserver (lzserver) to local (lz)."
# rsync -rtuvP lzr:/var/www/luevano/ $HOME/dox/www/luevano
